<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.workshop.aplikasiportalberita">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".portalberita.MyTimesApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_berita"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_berita"
        android:supportsRtl="true"
        android:theme="@style/TransparentTheme">
        <activity
            android:name=".PlaynewsActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name">

        </activity>
        <activity
            android:name=".portalberita.DetailActivity"
            android:label="@string/title_activity_detail" />
        <activity android:name=".portalberita.BeritaActivity" />
        <activity android:name=".slider.SliderActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />

    </application>

</manifest>